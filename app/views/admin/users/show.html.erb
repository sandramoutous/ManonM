<div class="high-margin-top">
  <div class="col-sm-12 col-md-8 mx-auto">
    <% if current_user && current_user.admin %>
      <%= link_to edit_admin_user_path(current_user), class: "float-right" do %>
        <i class="fas fa-pen"></i>
      <% end %>
    <% end %>

    <h5><%= current_user.firstname %> <%= current_user.lastname %></h5>
    <p>
      <% current_user.description.split("//").each do |paragraph| %>
        <div class="mt-3">
          <p class="text-justify">
            <%= paragraph %>
          </p>
        </div>
      <% end %>
    </p>
    <div>
      <%= image_tag(current_user.image.url, alt: 'Image', class: "img-fluid", width: "380px") if current_user.image? %>
    </div>
  </div>
</div>
