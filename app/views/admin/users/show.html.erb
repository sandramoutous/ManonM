<h5><%= current_user.firstname %> <%= current_user.lastname %></h5>
<p>
  <% current_user.description.split("//").each do |paragraph| %>
    <div class="mt-3"><%= paragraph %></div>
  <% end %>
</p>

<% if current_user.admin %>
  <%= link_to edit_admin_user_path(current_user) do %>
    <i class="fas fa-pen"></i>
  <% end %>
<% end %>
