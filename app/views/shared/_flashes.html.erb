<% if flash[:error] %>
  <div class="alert alert-danger" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="<%= t('actions.close') %>"><i class="fas fa-times alert-close-fa"></i></button>
    <%= flash[:error] %>
  </div>
<% end %>
<% if notice %>
  <div class="alert alert-success" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="<%= t('actions.close') %>"><i class="fas fa-times alert-close-fa"></i></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="<%= t('actions.close') %>"><i class="fas fa-times alert-close-fa"></i></button>
    <%= alert %>
  </div>
<% end %>

<script type="text/javascript">
  let close = document.querySelector(".alert-close-fa");
  if (close !== null) {
    close.addEventListener("click", function() {
      document.querySelector(".alert").classList.add("d-none");
    })
  }
</script>
